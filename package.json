{
  "name": "bucket-monorepo",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @bucket/web dev",
    "dev:desktop": "pnpm --filter @bucket/desktop dev",
    "dev:server": "pnpm --filter @bucket/server dev",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter @bucket/web build",
    "build:desktop": "pnpm --filter @bucket/desktop build",
    "build:server": "pnpm --filter @bucket/server build",
    "test": "pnpm --filter @bucket/web test && pnpm --filter @bucket/server test",
    "test:run": "pnpm --filter @bucket/web test:run",
    "test:server": "pnpm --filter @bucket/server test",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "sync-server": "pnpm --filter @bucket/server dev",
    "start:server": "pnpm --filter @bucket/server start"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.6.0+sha512.38dc6fba8dba35b39340b9700112c2fe1e12f10b17134715a4aa98ccf7bb035e76fd981cf0bb384dfa98f8d6af5481c2bef2f4266a24bfa20c34eb7147ce0b5e"
}
