{
  "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Bucket",
  "version": "0.1.0",
  "identifier": "com.bucket.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": "pnpm vite",
    "beforeBuildCommand": "pnpm exec vite build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Bucket",
        "url": "/#/manager",
        "width": 400,
        "height": 550,
        "minWidth": 400,
        "minHeight": 550,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "transparent": false,
        "center": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
